+"""Weather platform for data from WarnWetter."""
+import logging
+from typing import Optional
+
+import voluptuous as vol
+
+from homeassistant.components.weather import (
+    ATTR_FORECAST_CONDITION,
+    PLATFORM_SCHEMA,
+    WeatherEntity,
+)
+from homeassistant.const import ATTR_ATTRIBUTION, ATTR_ICON, ATTR_TEMPERATURE, CONF_NAME, TEMP_CELSIUS
+from homeassistant.helpers import config_validation as cv
+
+# Reuse data and API logic from the sensor implementation
+from .sensor import (
+    ATTR_HUMIDITY,
+    ATTR_MEANWIND,
+    ATTR_PRECIPITATION,
+    ATTR_PRESSURE,
+    ATTR_STATION,
+    ATTR_WINDDIRECTION,
+    ATTRIBUTION,
+    CONF_STATION_ID,
+    SENSOR_TYPES,
+    WarnWetterForecast,
+    WarnWetterMeasurements,
+)
+
+_LOGGER = logging.getLogger(__name__)
+
+PLATFORM_SCHEMA = PLATFORM_SCHEMA.extend(
+    {vol.Required(CONF_NAME): cv.string, vol.Required(CONF_STATION_ID): cv.string}
+)
+
+
+def setup_platform(hass, config, add_entities, discovery_info=None):
+    """Set up the WarnWetter weather platform."""
+    mprobe = WarnWetterMeasurements(config[CONF_STATION_ID])
+    fprobe = WarnWetterForecast(config[CONF_STATION_ID])
+    entity = WarnWetterWeather(mprobe, fprobe, config[CONF_NAME], config[CONF_STATION_ID])
+    add_entities([entity], True)
+
+
+class WarnWetterWeather(WeatherEntity):
+    """Representation of a weather condition."""
+
+    def __init__(self, mprobe, fprobe, station_name, station_id):
+        """Initialize WarnWetterWeather."""
+        self.mprobe = mprobe
+        self.fprobe = fprobe
+
+        self._attr_name = station_name
+        self._attr_unique_id = station_id
+        self._attr_extra_state_attributes = {
+            ATTR_ATTRIBUTION: ATTRIBUTION,
+            ATTR_STATION: station_id,
+        }
+        self._attr_native_pressure_unit = SENSOR_TYPES[ATTR_PRESSURE][2]
+        self._attr_native_temperature_unit = SENSOR_TYPES[ATTR_TEMPERATURE][2]
+        self._attr_native_precipitation_unit = SENSOR_TYPES[ATTR_PRECIPITATION][2]
+        self._attr_native_wind_speed_unit = SENSOR_TYPES[ATTR_MEANWIND][2]
+
+    def update(self):
+        """Update state."""
+        self.mprobe.update()
+        self.fprobe.update()
+
+        forecast = self.fprobe.data.get("forecast")
+
+        icon = self.mprobe.data.get(ATTR_ICON)
+        if icon:
+            self._attr_condition = icon
+        elif forecast:
+            self._attr_condition = forecast[0].get(ATTR_FORECAST_CONDITION)
+
+        self._attr_forecast = forecast
+        self._attr_humidity = self.mprobe.data.get(ATTR_HUMIDITY)
+        self._attr_wind_bearing = self.mprobe.data.get(ATTR_WINDDIRECTION)
+        self._attr_native_pressure = self.mprobe.data.get(ATTR_PRESSURE)
+        self._attr_native_temperature = self.mprobe.data.get(ATTR_TEMPERATURE)
+        self._attr_native_wind_speed = self.mprobe.data.get(ATTR_MEANWIND)
+
